{
    "name": "nork",
    "version": "3.0.4",
    "description": "The best node.js 'framework' :)",
    "main": "dist/app.js",
    "bin": "dist/app.js",
    "types": "dist/app.d.ts",
    "scripts": {
        "start": "npm run start:prod",
        "start:dev": "ts-node src/app.ts",
        "start:prod": "node dist/app.js",
        "tsc": "tsc -p .",
        "clean": "rimraf dist",
        "copy-assets": "ts-node src/utils/copyAssets",
        "build": "npm-run-all clean tsc copy-assets",
        "test": "mocha --config .mocharc.json --watch src/**/*.test.ts",
        "prepublish": "npm-run-all build"
    },
    "keywords": [
        "node",
        "framework",
        "express",
        "mvc"
    ],
    "author": "Filip Rojek",
    "license": "MIT",
    "dependencies": {
        "colors":"1.4.0",
        "fs-extra": "^10.0.0",
        "inquirer": "^8.1.2",
        "pad": "^3.2.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/fs-extra": "^9.0.13",
        "@types/inquirer": "^8.1.3",
        "@types/mocha": "^9.0.0",
        "@types/shelljs": "^0.8.11",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "chai": "^4.3.4",
        "eslint": "^8.3.0",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "shelljs": "^0.8.5",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/filiprojek/nork.git"
    },
    "bugs": {
        "url": "https://github.com/filiprojek/nork/issues"
    },
    "homepage": "https://github.com/filiprojek/nork/blob/master/README.md"
}
